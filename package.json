{
  "name": "confidential-futures-platform",
  "version": "1.0.0",
  "description": "Privacy-preserving derivatives platform built on Fully Homomorphic Encryption (FHE) technology",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:sepolia": "hardhat test --network sepolia",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "verify": "hardhat run scripts/verify.js --network sepolia",
    "interact": "hardhat run scripts/interact.js --network sepolia",
    "interact:local": "hardhat run scripts/interact.js --network localhost",
    "simulate": "hardhat run scripts/simulate.js --network sepolia",
    "simulate:local": "hardhat run scripts/simulate.js --network localhost",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "format": "prettier --write 'contracts/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'",
    "prettier:check": "prettier --check 'contracts/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint 'scripts/**/*.js' 'test/**/*.js' || echo 'ESLint not configured'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "flatten": "hardhat flatten",
    "size": "hardhat size-contracts",
    "security:check": "node scripts/security-check.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "test:performance": "hardhat test test/performance.test.js",
    "test:security": "npm run security:check && npm run security:audit",
    "prepare": "husky install || true",
    "pre-commit": "npm run prettier:check && npm run lint:sol && npm test",
    "pre-push": "npm run ci",
    "ci": "npm run prettier:check && npm run lint:sol && npm run compile && npm test",
    "ci:coverage": "npm run ci && npm run test:coverage",
    "ci:security": "npm run ci && npm run security:check && npm run security:audit"
  },
  "keywords": [
    "futures",
    "trading",
    "FHE",
    "privacy",
    "blockchain",
    "ethereum",
    "confidential",
    "derivatives"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "chai": "^4.3.10",
    "eslint": "^8.50.0",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^2.0.0",
    "hardhat-contract-sizer": "^2.10.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0"
  }
}
